{
  "name": "tykersaurus-server-trial",
  "version": "1.0.0",
  "description": "Tykersaurus Server Trial",
  "author": {
    "name": "Leo Nguyen"
  },
  "license": "ISC",
  "scripts": {
    "client": "cd client && npm run start",
    "server": "nodemon server",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "dev:server": "cd client && npm run build && cd .. && npm run start",
    "start": "node server",
    "heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build",
    "lint": "eslint src -c .eslintrc.json --ext js,jsx"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "config": "^3.3.3",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "node-sass": "^4.14.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "lint-staged": "^10.5.3",
    "nodemon": "^2.0.6"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leo-nguyen-goldenowl/tykersaurus-trial.git"
  },
  "bugs": {
    "url": "https://github.com/leo-nguyen-goldenowl/tykersaurus-trial/issues"
  },
  "keywords": [
    "node",
    "express",
    "create-react-app"
  ],
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
